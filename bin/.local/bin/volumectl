#!/usr/bin/sh


ACT=""

if [ "$1" != "" ]; then
	AMOUNT=5%
fi
if [ "$1" = "dec" ]; then
	ACT="-"
fi

if [ "$1" = "inc" ]; then
	ACT="+"
fi

pactl set-sink-volume @DEFAULT_SINK@ $ACT$AMOUNT
VOL=`pactl get-sink-volume @DEFAULT_SINK@ | grep Volume | head -n 1 | awk '{print $5}'`

notify-send Volume -h int:value:$VOL
