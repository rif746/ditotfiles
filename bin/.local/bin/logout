#!/bin/sh

THEMESTR="listview{lines:3;}"
THEMESTR+="inputbar{children:[prompt];}"
MENU=" Logout|勒 Restart|襤 Shutdown"
PROMPT="System Exit"

ROFI=$(rofi -dmenu -no-default-config -p "$PROMPT" -sep "|" -theme-str "$THEMESTR" <<< $MENU)

# if [ -z $ROFI ]; then
# 	exit
# fi

case $ROFI in
	*Logout)
		hyprctl dispatch exit 1 ;;
	*Restart)
		loginctl reboot ;;
	*Shutdown)
		loginctl poweroff ;;
esac
