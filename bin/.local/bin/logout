#!/bin/sh

THEMESTR="listview{lines:2;columns: 3;}"
THEMESTR+="inputbar{children:[prompt];}"
MENU=" Logout|鈴 Suspend|勒 Restart|襤 Shutdown"
PROMPT="System Exit"

ROFI=$(rofi -dmenu -no-default-config -p "$PROMPT" -sep "|" -theme-str "$THEMESTR" <<< $MENU)

# if [ -z $ROFI ]; then
# 	exit
# fi

case $ROFI in
	*Logout)
		i3-msg exit	;;
	*Suspend)
		systemctl suspend ;;
	*Restart)
		reboot ;;
	*Shutdown)
		shutdown now ;;
esac
