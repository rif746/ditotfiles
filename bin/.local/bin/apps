#!/usr/bin/python

from pyrof.rofi import Rofi


rofi = Rofi()
rofi.base_command = ['rofi', '-no-default-config']
rofi.dmenu = False
rofi.show = 'drun'
rofi.show_icons = True
rofi.icon_theme = 'Dracula'
rofi.font = 'FiraCode Nerd Font 11'
rofi.theme_str = "listview{lines:4;columns: 3;}"
rofi.theme_str += "element{orientation:vertical;}"
rofi.theme_str += "element-icon,element-text{horizontal-align:0.5;}"
rofi()
