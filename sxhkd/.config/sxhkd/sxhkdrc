super + Return
	kitty

super + alt + q
	~/.local/bin/logout

super + @space
	~/.local/bin/apps

super + w
  ~/.local/bin/window

super + r
  ~/.local/bin/recordscreen

super + m
	~/.local/bin/mpd-player

super + n
	~/.local/bin/networkmanager

super + s
	~/.local/bin/servicemanager

@Print
  ~/.local/bin/screenshot

super + alt + r
	bspc wm -r

super + shift + {0-6}
  bspc node -d '^{0-6}' --follow 

super + {0-6}
  bspc desktop -f '^{0-6}'

super + ctrl + {h,l}
	bspc desktop {prev,next} -f

super + {h,j,k,l}
	 bspc node -f {west,south,north,east}

super + {f,z,x}
	bspc node -t {\~fullscreen,\~tiled,\~floating}

super + shift {h,j,k,l}
	bspc node --swap {west,south,north,east} 

super + q
  bspc node -c

XF86MonBrightnessUp
	~/.local/bin/brightnessctl inc

XF86MonBrightnessDown
	~/.local/bin/brightnessctl dec

XF86AudioRaiseVolume
	~/.local/bin/volumectl inc

XF86AudioLowerVolume
	~/.local/bin/volumectl dec

XF86AudioMute
	amixer sset Master toggle

XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next
	
XF86AudioPrev
	mpc prev

XF86AudioStop
	mpc stop

ctrl + alt + {Left,h}
	xdotool keyup {Left,h} key --clearmodifiers Home

ctrl + alt + {Right,l}
	xdotool keyup {Right,l} key --clearmodifiers End

ctrl + alt + {Up,k}
	xdotool keyup {Up,k} key --clearmodifiers Page_Up

ctrl + alt + {Down,j}
	xdotool keyup {Down,j} key --clearmodifiers Page_Down

ctrl + alt + Escape
	killall sxhkd; sxhkd
